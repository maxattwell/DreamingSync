{
  "manifest_version": 3,
  "name": "DreamingSync",
  "version": "1.0",
  "description": "Add watch time to Dreaming Spanish hours.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "history"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/feed/history"],
      "js": ["shared/utils.js", "content-scripts/youtube_history.js"]
    },
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["shared/utils.js", "content-scripts/youtube_watch.js"]
    },
    {
      "matches": ["https://www.rtve.es/play/videos/*"],
      "js": ["shared/utils.js", "content-scripts/rtve_play_videos.js"]
    },
    {
      "matches": ["https://www.twitch.tv/videos/*"],
      "js": ["shared/utils.js", "content-scripts/twitch_videos.js"]
    }
  ],
  "host_permissions": [
    "https://www.dreamingspanish.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
